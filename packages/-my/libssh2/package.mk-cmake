PKG_NAME="libssh2"
PKG_VERSION="42941b4"
PKG_ARCH="any"
PKG_GIT_URL="https://github.com/libssh2/libssh2"
PKG_DEPENDS_TARGET="toolchain libz libgpg-error mbedtls"
PKG_IS_ADDON="no"
PKG_USE_CMAKE="yes"
PKG_AUTORECONF="no"

PKG_CMAKE_OPTS_TARGET="-DBUILD_EXAMPLES=OFF \
		       -DBUILD_SHARED_LIBS=OFF \
		       -DBUILD_TESTING=OFF \
		       -DCRYPTO_BACKEND=OpenSSL \
		       -DENABLE_GEX_NEW=OFF \
		       -DENABLE_zlib_COMPRESSION=ON"