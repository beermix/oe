. config/options $1

LIB="lib"
if [ $ARCH == "x86_64" ]
then
        LIB="lib64"
fi


GITROOT=`pwd`
cd $PKG_BUILD

export CMAKE_INSTALL_PREFIX="$GITROOT/$ADDON_BUILD/$PKG_ADDON_ID"
make all install

cd $GITROOT

mkdir -p $ADDON_BUILD/$PKG_ADDON_ID/lib
  cp /root/OpenELEC.tv/packages/perso/libcg_$ARCH/usr/$LIB/libCg* $ADDON_BUILD/$PKG_ADDON_ID/lib
  cp $SYSROOT_PREFIX/usr/lib/libpulse.so $ADDON_BUILD/$PKG_ADDON_ID/lib/libpulse.so.0
  cp $SYSROOT_PREFIX/usr/lib/libsndfile.so $ADDON_BUILD/$PKG_ADDON_ID/lib/libsndfile.so.1
  cp $SYSROOT_PREFIX/usr/lib/libopenal.so $ADDON_BUILD/$PKG_ADDON_ID/lib/libopenal.so.1
  cp $SYSROOT_PREFIX/usr/lib/libjson.so $ADDON_BUILD/$PKG_ADDON_ID/lib/libjson.so.0
  cp $SYSROOT_PREFIX/usr/lib/libpulsecommon*.so $ADDON_BUILD/$PKG_ADDON_ID/lib/
#  cp $SYSROOT_PREFIX/usr/lib/libpangocairo-1.0.so.0 $ADDON_BUILD/$PKG_ADDON_ID/lib/
#  cp $SYSROOT_PREFIX/usr/lib/libatk-1.0.so.0 $ADDON_BUILD/$PKG_ADDON_ID/lib/
#  cp $SYSROOT_PREFIX/usr/lib/libgdk_pixbuf-2.0.so.0 $ADDON_BUILD/$PKG_ADDON_ID/lib/
#  cp $SYSROOT_PREFIX/usr/lib/libgdk-x11-2.0.so.0 $ADDON_BUILD/$PKG_ADDON_ID/lib/
#  cp $SYSROOT_PREFIX/usr/lib/libgtk-x11-2.0.so.0 $ADDON_BUILD/$PKG_ADDON_ID/lib/
#  cp $SYSROOT_PREFIX/usr/lib/libcairo.so.2 $ADDON_BUILD/$PKG_ADDON_ID/lib/
#  cp $SYSROOT_PREFIX/usr/lib/libpango-1.0.so.0 $ADDON_BUILD/$PKG_ADDON_ID/lib/
#  cp $SYSROOT_PREFIX/usr/lib/libharfbuzz.so.0 $ADDON_BUILD/$PKG_ADDON_ID/lib/
#  cp $SYSROOT_PREFIX/usr/lib/libpangoft2-1.0.so.0 $ADDON_BUILD/$PKG_ADDON_ID/lib/
