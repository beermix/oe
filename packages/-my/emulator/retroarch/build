. config/options $1
. $PKG_DIR/setvar

if [ ! -d $DEV_REP/RetroArch ]
        then
		git clone https://github.com/libretro/RetroArch.git $DEV_REP/RetroArch
	else
		cd $DEV_REP/RetroArch
		make clean
fi
cd $DEV_REP/RetroArch

export CFLAGS="-I$OPENELEC/packages/perso/libcg_$ARCH/usr/include"
export LDFLAGS="-L$OPENELEC/packages/perso/libcg_$ARCH/usr/$LIB"
CROSS_COMPILE=true ./configure  --enable-dylib --enable-cg  
make


. $PKG_DIR/build_libcores
