. config/options $1
. $PKG_DIR/setvar

mkdir -p $ADDON_BUILD/$PKG_ADDON_ID/bin
mkdir -p $ADDON_BUILD/$PKG_ADDON_ID/lib
mkdir -p $ADDON_BUILD/$PKG_ADDON_ID/cores
mkdir -p $ADDON_BUILD/$PKG_ADDON_ID/shaders
  cp -P $PKG_BUILD/tools/retroarch-joyconfig $ADDON_BUILD/$PKG_ADDON_ID/bin
  cp -P $PKG_BUILD/retroarch $ADDON_BUILD/$PKG_ADDON_ID/bin
  cp $OPENELEC/packages/perso/libcg_$ARCH/usr/$LIB/libCg* $ADDON_BUILD/$PKG_ADDON_ID/lib
# cp $SYSROOT_PREFIX/usr/lib/libpulse.so $ADDON_BUILD/$PKG_ADDON_ID/lib/libpulse.so.0
# cp $SYSROOT_PREFIX/usr/lib/libpulsecommon*.so $ADDON_BUILD/$PKG_ADDON_ID/lib
# cp $SYSROOT_PREFIX/usr/lib/libsndfile.so $ADDON_BUILD/$PKG_ADDON_ID/lib/libsndfile.so.1
  cp $SYSROOT_PREFIX/usr/lib/libopenal.so $ADDON_BUILD/$PKG_ADDON_ID/lib/libopenal.so.1
#  cp $SYSROOT_PREFIX/usr/lib/libjson.so $ADDON_BUILD/$PKG_ADDON_ID/lib/libjson.so.0

##
##Add Common Shader
if [ ! -d $DEV_REP/common-shaders ]
        then
                git clone https://github.com/libretro/common-shaders.git $DEV_REP/common-shaders
fi
cd $DEV_REP/common-shaders/
git fetch

cd $OPENELEC
cp -R $DEV_REP/common-shaders/* $ADDON_BUILD/$PKG_ADDON_ID/shaders/

##
##Add Libcores
cd $DEV_REP/libretro-super
./libretro-install.sh $OPENELEC/$ADDON_BUILD/$PKG_ADDON_ID/cores
