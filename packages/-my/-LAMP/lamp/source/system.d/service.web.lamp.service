[Unit]
Description=LAMP (Linux Apache MySQL PHP) software bundle
After=graphical.target network-online.service
Before=kodi.service

[Service]
Type=oneshot
RemainAfterExit=1
ExecStart=/bin/sh -c "exec sh /storage/.kodi/addons/service.web.lamp/bin/lamp.start"
ExecStop=/bin/sh -c "exec sh /storage/.kodi/addons/service.web.lamp/bin/lamp.stop"
TimeoutStartSec=60
TimeoutStopSec=60
Restart=no
RestartSec=10
StartLimitInterval=0

[Install]
Alias=lamp.service
