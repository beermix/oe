PKG_NAME="nspr"
PKG_VERSION="4.13.1"
PKG_SHA256="5e4c1751339a76e7c772c0c04747488d7f8c98980b434dc846977e43117833ab"
PKG_ARCH="any"
PKG_LICENSE="Mozilla Public License"
PKG_SITE="https://developer.mozilla.org/en-US/docs/Mozilla/Projects/NSPR"
PKG_URL="https://ftp.mozilla.org/pub/nspr/releases/v$PKG_VERSION/src/nspr-$PKG_VERSION.tar.gz"
PKG_DEPENDS_HOST="toolchain"
PKG_DEPENDS_TARGET="nspr:host"
PKG_SECTION="security"
PKG_SHORTDESC="Netscape Portable Runtime (NSPR) provides a platform-neutral API for system level and libc like functions"
PKG_LONGDESC="Netscape Portable Runtime (NSPR) provides a platform-neutral API for system level and libc like functions"

PKG_AUTORECONF="no"

MAKEFLAGS=-j1
PKG_CONFIGURE_SCRIPT=nspr/configure
#PKG_CONFIGURE_OPTS_HOST="--with-pthreads"
PKG_CONFIGURE_OPTS_TARGET="--with-pthreads"
PKG_MAKE_OPTS_TARGET="NSINSTALL=$TOOLCHAIN/bin/nsinstall HOST_CFLAGS=$(sed "s/-Wall//;s/-pipe//" <<< $HOST_CFLAGS)"
PKG_MAKEINSTALL_OPTS_TARGET="NSINSTALL=$TOOLCHAIN/bin/nsinstall"

post_makeinstall_host() {
  cp config/nsinstall $TOOLCHAIN/bin
}