. /etc/profile
oe_setup_addon service.audio-tools

ASOUND_CONF="/run/asound.conf"
ASOUND_PULSE="$ADDON_DIR/config/asound.pulse"

tag="$(head -n 1 "$ASOUND_PULSE")"
if [ -f "$ASOUND_CONF" ]; then
  sed -i "/$tag/,/$tag/d" "$ASOUND_CONF"
fi
cat "$ASOUND_PULSE" >> "$ASOUND_CONF"
