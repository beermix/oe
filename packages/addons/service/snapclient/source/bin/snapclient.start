. /etc/profile
oe_setup_addon service.snapclient

HOME="$ADDON_HOME" \
nice -n "$sc_n" \
snapclient \
  ${sc_h:+--hostID "$sc_h"} \
  --latency "$sc_l" \
  --port "$sc_p" \
  --soundcard pulse \
  > /dev/null
