. /etc/profile
oe_setup_addon virtual.locale

[ -z "$LANG" ] && exit

CHARMAP="${LANG##*.}"
LOCALE="${LANG%%.*}"

if [ ! -d "$ADDON_HOME/$LANG" ]; then
  I18NPATH="$ADDON_DIR/i18n" localedef -f "$CHARMAP" -i "$LOCALE" "$ADDON_HOME/$LANG"
  [ "$?" != "0" ] && exit
fi

echo "$ADDON_HOME"
