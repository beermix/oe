--- packages/sysutils/busybox/scripts/init
+++ packages/sysutils/busybox/scripts/init
@@ -41,9 +41,6 @@ GRUB_DEFAULT=""
 NBD_DEVS="0"
 FLASH_FREE_MIN="5"
 
