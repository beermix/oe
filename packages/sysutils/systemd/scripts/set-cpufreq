# Configure frequency scaling properties
for policy in /sys/devices/system/cpu/cpufreq/ondemand /sys/devices/system/cpu/cpufreq/policy*/ondemand; do
  if [ -e $policy/up_threshold ]; then
    echo 50 > $policy/up_threshold
  fi
done
