PKG_NAME="zlib"
PKG_VERSION="68676363b65f39923295e980c8ebbbfe217764ef"
#PKG_SHA256="0bcf0ba4d051cef93f90bac7f39c1915e2477f8aa373027cc6b1b0d965d05ae0"
PKG_ARCH="any"
PKG_LICENSE="OSS"
PKG_SITE="https://cs.chromium.org/chromium/src/third_party/zlib/"
PKG_URL="https://chromium.googlesource.com/chromium/src/+archive/$PKG_VERSION/third_party/$PKG_NAME.tar.gz"
PKG_DEPENDS_HOST="cmake:host"
PKG_DEPENDS_TARGET="toolchain"
PKG_SECTION="compress"
PKG_SHORTDESC="zlib: A general purpose (ZIP) data compression library"
PKG_LONGDESC="zlib is a general purpose data compression library. All the code is thread safe. The data format used by the zlib library is described by RFCs (Request for Comments) 1950 to 1952 in the files ftp://ds.internic.net/rfc/rfc1950.txt (zlib format), rfc1951.txt (deflate format) and rfc1952.txt (gzip format)."
PKG_TOOLCHAIN="cmake-make"

unpack() {
  mkdir -p $PKG_BUILD
  tar -xf $SOURCES/$PKG_NAME/$PKG_SOURCE_NAME -C $PKG_BUILD
}
