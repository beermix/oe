PKG_NAME="zlib"
PKG_VERSION="a17fefa"
PKG_URL="https://github.com/mtl1979/zlib-ng/archive/${PKG_VERSION}.tar.gz"
PKG_SOURCE_DIR="zlib-ng-$PKG_VERSION*"
PKG_DEPENDS_TARGET=""
PKG_DEPENDS_HOST="ccache:host"
PKG_SECTION="compress"
PKG_TOOLCHAIN="cmake-make"

PKG_CMAKE_OPTS_TARGET="-DZLIB_COMPAT=1 -DWITH_GZFILEOP=1 -DWITH_OPTIM=1 -DCMAKE_VERBOSE_MAKEFILE=0 -DWITH_NEW_STRATEGIES=1 -DWITH_NATIVE_INSTRUCTIONS=1 -DHAVE_SSE3_INTRIN_EXITCODE=1 -DHAVE_SSSE3_INTRIN_EXITCODE=1 -DHAVE_SSE41_INTRIN_EXITCODE=1 -DHAVE_AVX_INTRIN_EXITCODE=0 -DHAVE_AVX2_INTRIN_EXITCODE=0 -DCMAKE_BUILD_TYPE=Release -DCMAKE_SYSTEM_PROCESSOR=AMD64"

PKG_CMAKE_OPTS_HOST="$PKG_CMAKE_OPTS_TARGET"
