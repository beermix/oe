PKG_NAME="libarchive"
PKG_VERSION="c253f0a"
PKG_GIT_URL="https://github.com/libarchive/libarchive"
PKG_DEPENDS_TARGET="toolchain openssl expat pcre libz xz bzip2"
PKG_DEPENDS_HOST="openssl:host zlib:host lzo:host xz:host bzip2:host"
PKG_SECTION="compress"
PKG_IS_ADDON="no"
PKG_USE_CMAKE="yes"
PKG_AUTORECONF="no"

PKG_CMAKE_OPTS_TARGET="-DBUILD_TESTING=OFF \
			  -DENABLE_CAT_SHARED=OFF \
			  -DENABLE_CPIO_SHARED=OFF \
			  -DENABLE_LibGCC=ON \
			  -DENABLE_TEST=OFF"
			  
PKG_CMAKE_OPTS_HOST="$PKG_CMAKE_OPTS_TARGET"