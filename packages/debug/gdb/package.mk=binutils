. "$ROOT/packages/devel/binutils/package.mk"

PKG_NAME="gdb"
PKG_URL=""
PKG_DEPENDS_TARGET="binutils:host"

unpack() {
  mkdir -p $PKG_BUILD
  cp -r $(get_build_dir binutils)/gdb/* $PKG_BUILD/
}

CC_FOR_BUILD="$HOST_CC"
CFLAGS_FOR_BUILD="$HOST_CFLAGS"

pre_configure_target() {
  # gdb could fail on runtime if build with LTO support
    strip_lto
    strip_hard
}

PKG_CONFIGURE_OPTS_TARGET="bash_cv_have_mbstate_t=set \
                           --disable-shared \
                           --enable-static \
                           --with-auto-load-safe-path=/ \
                           --disable-nls \
                           --disable-sim \
                           --without-x \
                           --disable-tui \
                           --disable-libada \
                           --without-lzma \
                           --disable-libquadmath \
                           --disable-libquadmath-support \
                           --enable-libada \
                           --enable-libssp \
                           --disable-werror"