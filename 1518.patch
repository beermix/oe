+PKG_NAME="netbase"
+PKG_VERSION="5.4"
+PKG_ARCH="any"
+PKG_LICENSE="GPL"
+PKG_SITE="http://releases.ubuntu.com"
+PKG_URL="http://archive.ubuntu.com/ubuntu/pool/main/n/netbase/netbase_$PKG_VERSION.tar.xz"
+PKG_DEPENDS_TARGET="toolchain"
+PKG_SECTION="network"
+PKG_SHORTDESC="The netbase package provides data for network services and protocols from the iana db."
+PKG_LONGDESC="The netbase package provides data for network services and protocols from the iana db."
+
+PKG_IS_ADDON="no"
+PKG_AUTORECONF="no"
+
+make_target() {
+  sed -e 's,^sunrpc,rpcbind,' -i $PKG_BUILD/etc-services
+}
+
+makeinstall_target() {
+  mkdir -p $INSTALL/etc
+    cp etc-protocols $INSTALL/etc/protocols
+    cp etc-services $INSTALL/etc/services
+}
