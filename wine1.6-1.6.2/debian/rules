#!/usr/bin/make -f
%:
	dh $@ --parallel

override_dh_auto_configure:
ifeq ($(DEB_BUILD_ARCH), amd64)
	dh_auto_configure -- --enable-win64
else
	dh_auto_configure
endif

override_dh_auto_test:
	# Wine's test suite does not pass on build daemons, skip it for now

override_dh_installdocs:
	# wine1.6 package should be a dependency of every subpackage here
	dh_installdocs --link-doc=wine1.6

override_dh_install:
	dh_install --fail-missing
	# These files will end up in multiple packages otherwise
	rm -f debian/wine1.6/usr/bin/wine
	rm -f debian/wine1.6/usr/bin/wine-preloader
	rm -f debian/wine1.6/usr/bin/wine64
	rm -f debian/wine1.6/usr/bin/wine64-preloader

override_dh_strip:
	dh_strip -Xwine-pthread -Xwine-kthread --dbg-package=wine1.6-dbg

override_dh_shlibdeps:
	dh_shlibdeps -Xwinepulse.drv.so
